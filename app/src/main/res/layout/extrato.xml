<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/extrato"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/top_bar"
        android:id="@+id/top_bar" />

    <HorizontalScrollView
        android:id="@+id/month_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/month_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:text="JAN" style="@style/BotaoMes" />
            <Button android:text="FEV" style="@style/BotaoMes" />
            <Button android:text="MAR" style="@style/BotaoMes" />
            <Button android:text="ABR" style="@style/BotaoMes" />
            <Button android:text="MAI" style="@style/BotaoMes" />
            <Button android:text="JUN" style="@style/BotaoMes" />
            <Button android:text="JUL" style="@style/BotaoMes" />
            <Button android:text="AGO" style="@style/BotaoMes" />
            <Button android:text="SET" style="@style/BotaoMes" />
            <Button android:text="OUT" style="@style/BotaoMes" />
            <Button android:text="NOV" style="@style/BotaoMes" />
            <Button android:text="DEZ" style="@style/BotaoMes" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_extrato"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/month_scroll"
        app:layout_constraintBottom_toTopOf="@+id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/btn_add_goal_hint"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/material_dynamic_neutral60"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
